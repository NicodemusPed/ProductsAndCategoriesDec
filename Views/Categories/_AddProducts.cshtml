@model Association


<h2>Products!!!</h2>

<form class="d-flex flex-1" asp-action="AddProduct" asp-controller="Categories" method="POST">
    <h3>Add Product</h3>
    <div class="row">
        <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId">
        <select asp-for="ProductId">


            @foreach (var p in ViewBag.nonProducts)
            {
                <option value="@p.ProductId">@p.Name</option>
            }

        </select>
        <span asp-validation-for="CategoryId"></span>
        <span asp-validation-for="ProductId"></span>
    </div>
    <div class="row">
        <input value="Add" type="submit">
    </div>
</form>

