@model Association


<form class="right" asp-action="AddProduct" asp-controller="Categories" method="POST">
    <h3>Add Product:</h3>
    <div class="row">
        <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId">
        <select asp-for="ProductId">


            @foreach (var p in ViewBag.AllCategories)
            {
                <option value="@p.CategoryId">@p.Name</option>
            }

        </select>
    </div>
    <div class="row">
        <input value="Add" type="submit">
    </div>
</form>

