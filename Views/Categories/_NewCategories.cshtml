@model Category

<body class="bg-secondary text-light">
    <div>
        <form class="Text-center" asp-action="Create" asp-controller="Categories" method="post">
            <div class="text-center mt-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="error"></span>
            </div>
                <input type="submit" value="Enter" class="btn btn-outline-light m-3"></input>
        </form>
    </div>
</body>

