@model Association


<form class="" asp-action="AddCategory" asp-controller="Products" method="POST">
    <h3>Add Category:</h3>
    <div class="row">
        <input type="hidden" asp-for="ProductId" value="@Model.ProductId">
        <select asp-for="CategoryId">


            @foreach (var c in ViewBag.nonCategories)
            {
                <option value="@c.CategoryId">@c.Name</option>
            }

        </select>
        <span asp-validation-for="CategoryId"></span>
        <span asp-validation-for="ProductId"></span>
    </div>
    <div class="row">
        <input value="Add" type="submit">
    </div>
</form>
